<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainView"
    tools:context="com.tolea.pw_lab3.NormalActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PREVIOUS PART"
        android:id="@+id/previousPartButton"
        android:layout_centerVertical="true"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEXT PART"
        android:id="@+id/nextPartButton"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DRAW BITMAP"
        android:id="@+id/drawBitmapButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HOOK KEYBOARD"
        android:id="@+id/keyboardHookButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        />

    <com.tolea.pw_lab3.CustomViews.CircleDrawViewNormalLevel
        android:layout_width="200dp"
        android:id="@+id/circle"
        android:layout_height="200dp"
        android:layout_marginTop="300dp"
        />

    <com.tolea.pw_lab3.CustomViews.RectangleDrawViewNormalLevel
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/rectangle"
        android:layout_alignParentRight="true"
        android:layout_marginTop="300dp"
        />


</RelativeLayout>
